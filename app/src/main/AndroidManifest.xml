<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.twtterclone">

    <application
        android:allowBackup="true"
        android:icon="@drawable/img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img"
        android:supportsRtl="true"
        android:theme="@style/Theme.TwtterClone">
        <activity
            android:name=".view.activity.Authenciation"
            android:exported="true" />
        <activity
            android:name=".view.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.ComposeTweetActvity"
            android:exported="true"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".view.activity.TimeLineActivity"
            android:exported="true"
            android:theme="@style/NoActionBar">

        </activity>
    </application>

</manifest>